{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "esnext",
    "lib": ["ESNext", "DOM"],
    "jsx": "preserve",
    "jsxFactory": "h",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["test", "demo", "node_modules", "examples"]
}
